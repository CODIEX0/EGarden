# eGarden Environment Configuration
# Copy this file to .env and fill in your actual API keys and configuration values

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com/
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
EXPO_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# Additional Firebase Config (for build config)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_DATABASE_URL=https://your_project-default-rtdb.firebaseio.com/
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890

# API Keys for External Services
OPENWEATHER_API_KEY=your_openweather_api_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
PLANTNET_API_KEY=your_plantnet_api_key_here
OPENAI_API_KEY=sk-your_openai_api_key_here

# Local AI Configuration (optional)
EXPO_PUBLIC_LOCAL_AI_ENDPOINT=http://localhost:8080

# Project Configuration
EAS_PROJECT_ID=your_eas_project_id_here
EXPO_PUBLIC_PROJECT_ID=your_project_id_here

# Error Monitoring (Sentry) - Optional
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Development Configuration
NODE_ENV=development
EXPO_NO_TELEMETRY=1
